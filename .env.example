# Database
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/dogatlas"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://dog-atlas.vercel.app"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGE_ME_LONG_RANDOM"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email (magic links) â€” use a real SMTP in prod
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="apikey_or_username"
EMAIL_SERVER_PASSWORD="Generic1234"
EMAIL_FROM="noreply@dogatlas.app"

# AWS S3 (Photo uploads)
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="dogatlas-photos"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
# Optional if using R2/MinIO:
# S3_ENDPOINT="https://<accountid>.r2.cloudflarestorage.com"

# Map (MapLibre uses public tiles here, no key needed)

# Google Places API (for fetching place photos & coordinates)
# Get your API key: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY="your-google-places-api-key"
GOOGLE_PLACES_API_KEY=

# Unsplash API (for high-quality stock photos)
# Get your access key: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=


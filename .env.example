# =============================================================================
# DOG ATLAS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git (it's in .gitignore)
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Local development (SQLite)
DATABASE_URL="file:./prisma/dev.db"

# Production (PostgreSQL) - Configure in Vercel dashboard
# DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/dogatlas"

# -----------------------------------------------------------------------------
# SITE CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL="http://localhost:3000"  # Update to https://www.dog-atlas.com in production
NEXT_PUBLIC_USE_DATABASE=true

# -----------------------------------------------------------------------------
# AUTHENTICATION (NextAuth.js)
# -----------------------------------------------------------------------------
NEXTAUTH_URL="http://localhost:3000"  # Update to https://www.dog-atlas.com in production
NEXTAUTH_SECRET="CHANGE_ME_LONG_RANDOM"  # Generate with: openssl rand -base64 32

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# -----------------------------------------------------------------------------
# ANALYTICS
# -----------------------------------------------------------------------------
# Google Analytics 4
# Get from: https://analytics.google.com
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# -----------------------------------------------------------------------------
# THIRD-PARTY APIs
# -----------------------------------------------------------------------------
# Yelp Fusion API (optional - for importing places)
# Get from: https://www.yelp.com/developers
YELP_API_KEY="your-yelp-api-key"

# Google Places API (for fetching place photos & coordinates)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# Unsplash API (for high-quality stock photos)
# Get from: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"

# -----------------------------------------------------------------------------
# EMAIL (Optional - for magic links and notifications)
# -----------------------------------------------------------------------------
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="apikey_or_username"
EMAIL_SERVER_PASSWORD="your-password"
EMAIL_FROM="noreply@dogatlas.app"

# -----------------------------------------------------------------------------
# AWS S3 (Optional - for photo uploads)
# -----------------------------------------------------------------------------
AWS_REGION="eu-central-1"
AWS_S3_BUCKET="dogatlas-photos"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
# Optional if using R2/MinIO:
# S3_ENDPOINT="https://<accountid>.r2.cloudflarestorage.com"

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# Set these in Vercel dashboard (Settings â†’ Environment Variables):
# - DATABASE_URL
# - NEXTAUTH_URL
# - NEXTAUTH_SECRET
# - NEXT_PUBLIC_SITE_URL
# - NEXT_PUBLIC_GA_ID
# - GOOGLE_CLIENT_ID
# - GOOGLE_CLIENT_SECRET
# =============================================================================

